		  </TR>
	   </TBODY>
	</TABLE>
	<xsl:for-each select="/tmwordcount/documents/document">
		<xsl:call-template name="base-one-document">
			<xsl:with-param name="document" select="." />
		</xsl:call-template>
</xsl:for-each>

